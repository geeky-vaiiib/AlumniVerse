{
  "name": "alumniverse-backend",
  "version": "1.0.0",
  "description": "Backend API for AlumniVerse - A centralized alumni engagement platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:setup": "node database/setup.js",
    "db:migrate": "node -e \"require('./database/setup.js').runMigrations()\"",
    "db:seed": "node -e \"require('./database/setup.js').seedDatabase()\"",
    "db:reset": "npm run db:setup"
  },
  "keywords": [
    "alumni",
    "networking",
    "express",
    "api",
    "jwt",
    "backend"
  ],
  "author": "AlumniVerse Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.93.3",
    "axios": "^1.13.4",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.6",
    "crypto": "^1.0.1",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.3.1",
    "firebase-admin": "^13.6.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.1",
    "pg": "^8.18.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
